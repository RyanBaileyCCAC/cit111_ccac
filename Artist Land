public class ArtistLand {
    
static Scanner keyboardScanner = new Scanner(System.in);
public static boolean mainLoop = true;

public static void main(String[] args) {
         
        int menu;
        System.out.println("Welcome To Ryan's Music Recomendations.");
        while (mainLoop){

            System.out.println("What Artist Would You Like to Learn More About?");
            System.out.println("1: The National");
            System.out.println("2: Beach House");
            System.out.println("3: Brand New");
            System.out.println("4: Arcade Fire"); 
            System.out.println("5: The War On Drugs");
            System.out.println("6: Grimes");
            System.out.println("7: Random Playlist");
            System.out.println("8: Exit"); 

            menu = keyboardScanner.nextInt();

            switch (menu) {

                case 1:
                    firstArtist();
                    break;
                case 2:
                    secondArtist();
                    break;  
                case 3:
                    thirdArtist();
                case 4:
                    fourthArtist(); 
                case 5:
                    fifthArtist(); 
                case 6:
                    sixthArtist(); 
                case 7: 
                    playlist(); 
                case 8:
                    exit();
                    System.out.println("Exit?");
                    break;
            }
        }  
    }

        public static void firstArtist(){
        
        System.out.println("Here's Some Information on the National");     
            
        Artist firstArtist; 
        firstArtist = new Artist(); 
        firstArtist.name = "The National"; 
        firstArtist.genreType = "Rock"; 
        firstArtist.numberofAlbums = "Seven"; 
        firstArtist.favoriteAlbum = "Trouble Will Find Me"; 
        firstArtist.leastfavoriteAlbum = "Self-Titled, The National"; 
        firstArtist.favoriteSong = "Don't Swallow The Cap"; 
        
        System.out.println("Artist Name: " + firstArtist.name); 
        System.out.println("Genre: " + firstArtist.genreType);
        System.out.println("Number of Albums: " + firstArtist.numberofAlbums);
        System.out.println("Favorite Album: " + firstArtist.favoriteAlbum);
        System.out.println("Least Favorite Album: " + firstArtist.leastfavoriteAlbum); 
        System.out.println("Favorite Song: " + firstArtist.favoriteSong);
        
        }//close first artist
        
